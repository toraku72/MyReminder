<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_title_label"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <EditText
            android:id="@+id/task_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/task_title_hint"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:layout_weight="1"/>

        <CheckBox
            android:id="@+id/task_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/task_time_label"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/task_date_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_button_calendar"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_weight="7"
            />

        <Button
            android:id="@+id/task_time_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_button_clock"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:layout_weight="3"/>
    </LinearLayout>

    <Button
        android:id="@+id/remind_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/remind_me"
        />

</LinearLayout>